{
    "require": {
        "aydin-hassan/magento-core-composer-installer": "*",
        "openmage/magento-lts": "19.4.13",
        "magento-hackathon/magento-composer-installer": "4.0.*",
        "aoepeople/aoe_scheduler": "1.5.*"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.firegento.com"
        }
    ],
    "extra": {
        "magento-core-package-type": "magento-source",
        "magento-root-dir": "htdocs",
        "magento-core-deploy" : {
            "excludes": [
                ".htaccess"
            ],
            "ignore-directories": [],
            "git-ignore-append": false,
            "_git-ignore-enable": false
        },
        "magento-force": true
    }
}
